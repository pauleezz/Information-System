<%- include("../partials/header") %>
    <div class="container">
        <header class="jumbotron" style="margin-top: 10px;">
            <div class="container">
                <h1>
                    <h1>Customer Index Page</h1>
                </h1>
                <a class="btn btn-primary btn-lg" href="/customer/new">Add new Customer</a>
            </div>
        </header>
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Customer ID</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Birthday</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Email</th>
                    <th scope="col">Address</th>
                    <th scope="col">More</th>
                </tr>
            </thead>
            <tbody>
                <% rows.forEach( customer => { %>
                    <tr>
                        <th scope="row">
                            <%= customer.c_id %>
                        </th>
                        <td>
                            <%= customer.c_name %>
                        </td>
                        <td>
                            <%= customer.birthday %>
                        </td>
                        <td>
                            <%= customer.gender %>
                        </td>
                        <td>
                            <%= customer.phone %>
                        </td>
                        <td>
                            <%= customer.email %>
                        </td>
                        <td>
                            <%= customer.address %>
                        </td>
                        <td>
                            <a href="/customer/<%= customer.c_id %>" class="btn btn-primary">More info</a>
                        </td>
                    </tr>

                    <% }); %>

            </tbody>
        </table>
    </div>
    <%- include("../partials/footer") %>