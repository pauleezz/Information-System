<%- include("../partials/header") %>

    <div class="container">
        <h1 style="text-align: center;">Edit member
            <%= rows.c_name %> Information
                <% rows.birthday %>
        </h1>
        <div class="row">
            <div style="width: 50%; margin: 25px auto;">
                <form action="/customer/<%= rows.c_id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="c_name" placeholder="name" value="<%= rows.c_name %>">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="text" class="form-control" name="c_password" placeholder="password" value="<%= rows.c_password %>">
                    </div>
                    <div class="form-group">
                        <label for="birthday">Birthday</label>
                        <input id="date" type="date" class="form-control" name="birthday" placeholder="birthday" value="<%= rows.birthday %>">
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <select class="custom-select" name="gender" id="gender">
                            <option selected><%= rows.gender %></option>
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone</label>
                        <input type="text" class="form-control" name="phone" placeholder="phone" value="<%= rows.phone %>">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="email" value="<%= rows.email %>">
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" name="address" placeholder="address" value="<%= rows.address %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Submit</button>
                    </div>

                </form>




            </div>
        </div>
    </div>



    <%- include("../partials/footer") %>