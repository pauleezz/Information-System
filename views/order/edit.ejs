<%- include("../partials/header") %>


    <div class="container">
        <h1 style="text-align: center;">Edit order </h1>
        <div class="row">
            <div style="width: 50%; margin: 25px auto;">
                <form action="/order/:id?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="c_id">Customer ID</label>
                        <input class="form-control" type="number" name="c_id" id="c_id" value="<%= rows.c_id %>">
                    </div>
                    <div class="form-group">
                        <label for="d_id">Delivery option</label>
                        <input class="form-control" type="int" name="d_id" id="d_id">
                    </div>
                    <div class="form-group">
                        <label for="order_date">Order Date</label>
                        <input class="form-control" type="date" name="order_date" id="order_date">
                    </div>
                    <button class="form-group">
                        <button class="btn btn-primary btn-block">Submit</button>

                </form>


            </div>
        </div>
    </div>




    <%- include("../partials/footer") %>